{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build:cmd": {
      "outputs": ["build/**"],
      "inputs": [
        "../../scripts/build_pkg.sh",
        "src/**",
        ":!src/**/*.test.ts",
        "package.json",
        "tsconfig.json",
        "tsconfig.build.json",
        "tsconfig.build.*.json"
      ],
      "dependsOn": ["^build:cmd"]
    },
    "test:types": {
      "inputs": ["src/**", "package.json", "tsconfig.json", "tsconfig.build.json", "tsconfig.build.*.json"],
      "dependsOn": ["^build:cmd"]
    },
    "test:cycles": {
      "inputs": ["src/**", "package.json", "tsconfig.json"]
    },
    "clean": {
      "cache": false
    },
    "//#test:unused": {
      "cache": false
    },
    "//#test:unit": {
      "cache": false
    }
  }
}
